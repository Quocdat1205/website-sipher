{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "noImplicitAny": false,
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "@api": ["src/api"],
            "@pages/*": ["src/pages/*"],
            "@components/*": ["src/components/*"],
            "@utils": ["src/utils"],
            "@hooks/*": ["src/hooks/*"],
            "@store": ["src/store"],
            "@constant/*": ["src/constant/*"],
            "@@types": ["src/types/index"],
            "@source/*": ["src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "../web-market/src/theme.ts"],
    "exclude": ["node_modules"]
}
